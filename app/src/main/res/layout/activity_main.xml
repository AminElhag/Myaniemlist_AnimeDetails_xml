                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="10dp"
                        android:numStars="5"
                        android:rating="4.5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15.4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sora" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="245.9dp"
                android:layout_marginStart="15.4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="60dp"
                android:elevation="0dp"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="22.4dp"
                        android:lineSpacingExtra="2.8sp"
                        android:text="Shiro"
                        android:textColor="#131314"
                        android:textSize="16.2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="15.4dp"
                        android:layout_marginEnd="15.4dp"
                        android:lineSpacingExtra="2.6sp"
                        android:text="Shiro is an 11-year-old genius NEET, hikikomori gam..."
                        android:textColor="#8f8f8f"
                        android:textSize="13.4sp" />

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="10dp"
                        android:numStars="5"
                        android:rating="4.5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15.4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shiro" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="245.9dp"
                android:layout_marginStart="15.4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="60dp"
                android:elevation="0dp"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="22.4dp"
                        android:lineSpacingExtra="2.8sp"
                        android:text="Stephanie Dola"
                        android:textColor="#131314"
                        android:textSize="16.2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="15.4dp"
                        android:layout_marginEnd="15.4dp"
                        android:lineSpacingExtra="2.6sp"
                        android:text="Stephanie is expressive and emotional to the point where she canno..."
                        android:textColor="#8f8f8f"
                        android:textSize="13.4sp" />

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginTop="10dp"
                        android:numStars="5"
                        android:rating="4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15.4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stephanie" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>
</RelativeLayout>